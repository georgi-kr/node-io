{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "*": ["./node_modules/*", "./src/types/*"]
    },
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["test"],
}
